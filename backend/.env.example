# --- Plaid ---
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENV=sandbox

# --- Firebase Admin ---
# Option A: Path to service account JSON (local dev)
FIREBASE_SERVICE_ACCOUNT=config/firebase-service-account.json
# Option B: Full JSON string (Railway deployment)
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account",...}

FIREBASE_PROJECT_ID=money-planner-ca2c0

# --- Dev Mode ---
DEV_MODE=true
DEV_OBSERVATION_DAYS=0
DEV_BUDGET_CYCLE_DAYS=1
DEV_PHASE5_GATE=false
AUTOMATION_MODE=manual

# --- Security ---
ENCRYPTION_KEY=
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"

# --- Server ---
PORT=5050
ALLOWED_ORIGINS=http://localhost:8081,http://localhost:19006

# --- Plaid Webhook (optional, set after Railway deploy) ---
# PLAID_WEBHOOK_URL=https://your-app.up.railway.app/api/plaid/webhook
